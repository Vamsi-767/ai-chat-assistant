{
  "manifest_version": 3,
  "name": "AI Chat Assistant",
  "version": "1.0",
  "description": "An AI chat assistant that can do Q&A and analyze the current page.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }

}
